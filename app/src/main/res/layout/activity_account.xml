<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account"
    android:background="@color/lightblue"
    >



    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/lightblue"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/profile"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="24dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/buttonborder"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="6dp"
            >
            <TextView
                android:id="@+id/Uname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jemuel Sin"
                android:textSize="19sp"
                android:fontFamily="@font/d_dinbold"
                android:textColor="@color/black"


                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit personal Information >"
                android:textSize="15dp"
                android:fontFamily="@font/d_dinbold"
                android:layout_marginTop="2dp"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_settings_24"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="40dp"
            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="490dp"
        android:layout_marginBottom="284dp"
        android:background="@drawable/accountborder"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0">

      <Button
          android:id="@+id/ProfileInfoButton"
          android:paddingLeft="20dp"
          android:background="@drawable/accountborder"
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:drawableStart="@drawable/baseline_person_24"
          android:hint="   Profile Information"
          android:textColor="@color/black"
          android:textAlignment="textStart"
          android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
          android:fontFamily="@font/d_din"
          android:textSize="15dp"
          />

        <Button
            android:id="@+id/MyreviewButton"
            android:paddingLeft="20dp"
            android:background="@drawable/accountborder"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableStart="@drawable/baseline_person_24"
            android:hint="   My Review"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
            android:fontFamily="@font/d_din"
            android:textSize="15dp"
            />

        <Button
            android:id="@+id/ChangepassButton"
            android:paddingLeft="20dp"
            android:background="@drawable/accountborder"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableStart="@drawable/baseline_person_24"
            android:hint="   Change Password"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
            android:fontFamily="@font/d_din"
            android:textSize="15dp"
            />
        <Button
            android:id="@+id/LanguageButton"
            android:paddingLeft="20dp"
            android:background="@drawable/accountborder"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableStart="@drawable/baseline_person_24"
            android:hint="   Language"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
            android:fontFamily="@font/d_din"
            android:textSize="15dp"
            />
        <Button
            android:id="@+id/AboutUsButton"
            android:paddingLeft="20dp"
            android:background="@drawable/accountborder"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:hint="   About Us"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
            android:fontFamily="@font/d_din"
            android:textSize="15dp"
            />
        <Button
            android:id="@+id/TernsConditionButton"
            android:paddingLeft="20dp"
            android:background="@drawable/accountborder"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:hint="   Terms and Conditions "
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
            android:fontFamily="@font/d_din"
            android:textSize="15dp"
            />
        <Button
            android:id="@+id/PrivacyPolicyButton"
            android:paddingLeft="20dp"
            android:background="@drawable/accountborder"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="   Privacy Policy"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
            android:fontFamily="@font/d_din"
            android:textSize="15dp"
            />
        <Button
            android:id="@+id/FAQButton"
            android:paddingLeft="20dp"
            android:background="@drawable/accountborder"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="   FAQ"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
            android:fontFamily="@font/d_din"
            android:textSize="15dp"
            />
        <Button
            android:id="@+id/DeleteAccountButton"
            android:paddingLeft="20dp"
            android:background="@drawable/accountborder"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="   Delete Account"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
            android:fontFamily="@font/d_din"
            android:textSize="15dp"
            />
        <Button
            android:id="@+id/SignoutButton"
            android:paddingLeft="20dp"
            android:background="@drawable/accountborder"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="   Sign out"
            android:textColorHint="@color/design_default_color_error"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:drawableEnd="@drawable/baseline_keyboard_arrow_right_24"
            android:fontFamily="@font/d_din"
            android:textSize="15dp"
            />

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/buttonnav"
        />
</androidx.constraintlayout.widget.ConstraintLayout>